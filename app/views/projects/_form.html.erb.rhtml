<div class="panel-body">
  <%= simple_form_for @project do |f| %>
    <%= f.input :title, short_discription: false,  {placeholder: "title"} %>
    <%= f.input :short_discription, as: :text,  {placeholder: "title"}%>
    <%= f.input :image_url, title: false, input_html: {placeholder: "Image"} %>
    <%= f.submit "Submit".html_safe, class: "btn btn-lg btn-danger"%>
  <%end %>
</div>
